@{
    ViewBag.Title = "UserInfo";
    Layout = null;
}



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title></title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/Content/UploadAvatar/css/font-

awesome.4.6.0.css">
    <link rel="stylesheet" href="/Content/UploadAvatar/css/amazeui.min.css">
    <link rel="stylesheet" href="/Content/UploadAvatar/css/amazeui.cropper.css">
    <link rel="stylesheet" href="/Content/UploadAvatar/css/custom_up_img.css">
    <link href="https://cdn.bootcss.com/bootstrap/4.0.0-beta/css/bootstrap.css"
          rel="stylesheet">
    <style type="text/css">
        .up-img-cover {
            width: 100px;
            height: 100px;
        }

            .up-img-cover img {
                width: 100%;
            }
    </style>

</head>
<body>
    <center>
        <div class="up-img-cover" id="up-img-touch">
            <img id="imgpic" class="am-circle" alt="点击图片上传"
                 src="@System.Web.HttpUtility.UrlDecode(Common.PassPort.IdentityHelper.UserHeadPortrait)" data-am-popover="{content: '点击上传', trigger:

'hover focus'}">
        </div>
    </center>
    <div><a style="text-align: center; display: block;" id="pic"></a></div>

    <!--图片上传框-->
    <div class="am-modal am-modal-no-btn up-frame-bj " tabindex="-1" id="doc-modal-1">
        <div class="am-modal-dialog up-frame-parent up-frame-radius">
            <div class="am-modal-hd up-frame-header">
                <label>修改头像</label>
                <a href="javascript: void(0)" class="am-close am-close-spin" data-am-modal-close>&times;</a>
            </div>
            <div class="am-modal-bd  up-frame-body">
                <div class="am-g am-fl">
                    <div class="am-form-group am-form-file">
                        <div class="am-fl">
                            <button type="button" class="am-btn am-btn-default am-btn-sm">
                                <i class="am-icon-cloud-upload"></i> 选择要上传的文件
                            </button>
                        </div>
                        <input type="file" id="inputImage">
                    </div>
                </div>
                <div class="am-g am-fl">
                    <div class="up-pre-before up-frame-radius">
                        <img alt="" src="" id="image">
                    </div>
                    <div class="up-pre-after up-frame-radius">
                    </div>
                </div>
                <div class="am-g am-fl">
                    <div class="up-control-btns">
                        <span class="am-icon-rotate-left" onclick="rotateimgleft()"
                              style="font-size:25px;line-height:30px;"></span>
                        <span class="am-icon-rotate-right" onclick="rotateimgright()"
                              style="font-size:25px;line-height:30px;"></span>
                        <span class="am-icon-check" id="up-btn-ok"
                              url="/UploadFile/UploadFile?UploadType=UploadAvatar" style="font-size:25px;line-height:30px;"></span>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!--加载框-->
    <div class="am-modal am-modal-loading am-modal-no-btn" tabindex="-1" id="my-modal-

loading">
        <div class="am-modal-dialog">
            <div class="am-modal-hd">正在上传...</div>
            <div class="am-modal-bd">
                <span class="am-icon-spinner am-icon-spin"></span>
            </div>
        </div>
    </div>

    <!--警告框-->
    <div class="am-modal am-modal-alert" tabindex="-1" id="my-alert">
        <div class="am-modal-dialog">
            <div class="am-modal-hd">信息</div>
            <div class="am-modal-bd" id="alert_content">
                成功了
            </div>
            <div class="am-modal-footer">
                <span class="am-modal-btn">确定</span>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row clearfix">
            <div class="col-md-12 column">
                <form role="form">
                    <div class="form-group">
                        <label for="exampleInputEmail1">昵称</label><input type="text"
                                                                         name="username" class="form-control" id="exampleInputEmail1" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">真实姓名</label><input type="text"
                                                                           name="name" class="form-control" id="exampleInputEmail1" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">性别</label><br />
                        <input type="radio" name="sex" />男  &nbsp;&nbsp; <input type="radio" name="sex" />女
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">个性签名</label>
                        <textarea class="form-control" id="exampleInputPassword1"
                                  rows="6"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">家庭住址</label>
                        <textarea class="form-control" id="exampleInputPassword1"
                                  rows="6"></textarea>
                    </div>
                    <a class="btn btn-default" href="/home/index">返回主页</a>&nbsp;&nbsp;&nbsp;<button type="submit" class="btn btn-default">提交</button>&nbsp;&nbsp;&nbsp;<input type="button" class="btn btn-default" onclick="OpenUserInfoDataManage()" value="用户资料管理" />
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.bootcss.com/jquery/1.12.4/jquery.min.js"></script>
    <script src="/Content/UploadAvatar/js/amazeui.min.js" charset="utf-8"></script>
    <script src="/Content/UploadAvatar/js/cropper.min.js" charset="utf-8"></script>
    <script src="/Content/UploadAvatar/js/custom_up_img.js" charset="utf-8"></script>
    <script src="js/bootstrap.min.js"></script>
    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
    <script src="~/Content/layui/layui.js"></script>
    <script>
        layui.use(['layer'], function(){
            var layer = layui.layer;
           
        })
        function OpenUserInfoDataManage() {
           var index= layer.open({
                type: 2,
                area: ['700px', '450px'],
                fixed: false, //不固定
                maxmin: false,
                content: '/User/UserInfoDataManage'
           });
           layer.full(index);
        }
    </script>
</body>
</html>

