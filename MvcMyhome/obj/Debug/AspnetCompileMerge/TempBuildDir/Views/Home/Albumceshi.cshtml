@{
    ViewBag.Title = "Albumceshi";
    Layout = null;
}
<!doctype html>
<html lang="zh">
<head>
    <title></title>
    <link href="/Content/jqeryMasonry/dist/stylesheets/chromagallery.min.css" rel="stylesheet" />
</head>
<body>


 
    <div class="content">
        <div class="chroma-gallery mygallery">
            @{System.Data.DataTable dt = ViewData["dtAlbum"] as System.Data.DataTable;}
            @if (dt.Rows.Count > 0)
            {
                foreach (System.Data.DataRow item in dt.Rows)
                {
                    <img src='@item["AlnumUrl"]' alt='@item["alnumname"]' data-largesrc='@item["AlnumUrl"]'>
                }
            }
        </div>
    </div>



    <script src="~/Content/jqeryMasonry/js/jquery-1.11.0.min.js"></script>
    @Scripts.Render("~/Content/Albumjs")
    <script type="text/javascript">
        $(document).ready(function () {

            //$("img").lazyload({ effect: "fadeIn" });

            $(".mygallery").chromaGallery
		    ({
		        color: '#000',
		        gridMargin: 15,
		        maxColumns: 5,
		        dof: true,
		        screenOpacity: 0.8
		    });

            //距离屏幕左边的距离
            $(window).width();
            $(this).mouseup(function (e) {
                var mygallery = $(".mygallery").chromaGallery();
                if (e.pageY - $(document).scrollTop() > 50) {
                    if (e.pageX > $(window).width() / 2) {
                        mygallery.chromaGallery("next");
                    } else {
                        mygallery.chromaGallery("prev");
                    }
                }

            })

        });

    </script>
</body>
</html>